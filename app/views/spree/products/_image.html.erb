<% if defined?(image) && image %>
  <%= link_to image_tag(image.attachment.url(:product), :itemprop => "image"), image.attachment.url(:original), :class => 'zoom-img' %>
<% else %>
  <% if @product.images.empty? %>
    <%= product_image(@product, :itemprop => "image") %>
  <% end %> 
  <%= link_to product_image(@product, :itemprop => "image"), @product.images.first.attachment.url(:original), :class => 'zoom-img' %>
<% end %>
